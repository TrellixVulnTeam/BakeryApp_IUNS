<EstabelecimentoPage>:
    name: 'estabelecimento'
    MDToolbar:
        id: toolbar
        pos_hint: {"top": 1}
        elevation: 10
        title: "Bakery ABC - Estabelecimentos"
        left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
        md_bg_color: toolbarColor

    MDNavigationLayout:
        x: toolbar.height
        ScreenManager:
            id: screen_manager
            MDScreen:
                name: "fornecedores"
                on_enter:
                    root.manager.transition.direction = 'right'
                    root.switchFornecedores()   
            MDScreen:
                name: "estabelecimento"
                on_enter:
                    root.manager.transition.direction = 'right'
                    root.switchEstabelecimento() 
            MDScreen:
                name: "historico"
                MDLabel:
                    text: "historico home"
                    halign: "center"
        MDNavigationDrawer:
            id: nav_drawer
            NavigationDrawer:
                screen_manager: screen_manager
                nav_drawer: nav_drawer

    MDBottomNavigation:
        size_hint_y: .09
        panel_color: get_color_from_hex("#DF6710")
        text_color_active: get_color_from_hex("#fff4e6")
        first_widget: 'screen 3'
        
        MDBottomNavigationItem:
            name: 'screen 1'
            text: 'home'
            icon: 'home-circle'
            on_enter:
                root.manager.transition.direction = 'right'
                root.switchHome()

        MDBottomNavigationItem:
            name: 'screen 2'
            text: 'Estoque'
            icon: 'barcode'
            on_enter: root.switchEstoque()

        MDBottomNavigationItem:
            name: 'screen 3'
            text: 'Funcion√°rios'
            icon: 'account-group'
            on_enter: root.switchFuncionario()

    MDFillRoundFlatIconButton:
        text : 'Cadastrar estabelecimento'
        icon : "store-plus"
        pos_hint : {"center_x":.5,"center_y":.85}
        text_color : get_color_from_hex("#7E6B73")
        md_bg_color : get_color_from_hex("#FCE18E")
        font_size : 20
        user_font_size: "64sp"
        on_press:
            root.manager.transition.direction = 'left'
            root.switchCadastrar()

    MDFillRoundFlatIconButton:
        text : 'Inserir contas'
        icon : "basket-plus"
        pos_hint : {"center_x":.5,"center_y":.75}
        text_color : get_color_from_hex("#7E6B73")
        md_bg_color : get_color_from_hex("#FCE18E")
        font_size : 20
        user_font_size: "64sp"
        on_press:
            root.manager.transition.direction = 'left'
            root.switchInserir()

    MDFillRoundFlatIconButton:
        text : 'Alterar estabelecimento'
        icon : "cart-arrow-up"
        pos_hint : {"center_x":.5,"center_y":.65}
        text_color : get_color_from_hex("#7E6B73")
        md_bg_color : get_color_from_hex("#FCE18E")
        font_size : 20
        user_font_size: "64sp"
        on_press:
            root.manager.transition.direction = 'left'
            root.switchAlterar()

    MDFillRoundFlatIconButton:
        text : 'Modificar contas'
        icon : "basket-fill"
        pos_hint : {"center_x":.5,"center_y":.55}
        text_color : get_color_from_hex("#7E6B73")
        md_bg_color : get_color_from_hex("#FCE18E")
        font_size : 20
        user_font_size: "64sp"
        on_press:
            root.manager.transition.direction = 'left'
            root.switchModificar()

    MDFillRoundFlatIconButton:
        text : 'Remover estabelecimento'
        icon : "store-remove"
        pos_hint : {"center_x":.5,"center_y":.45}
        text_color : get_color_from_hex("#7E6B73")
        md_bg_color : get_color_from_hex("#FCE18E")
        font_size : 20
        user_font_size: "64sp"
        on_press:
            root.manager.transition.direction = 'left'
            root.switchRemover()

    MDFillRoundFlatIconButton:
        text : 'Excluir contas'
        icon : "basket-remove"
        pos_hint : {"center_x":.5,"center_y":.35}
        text_color : get_color_from_hex("#7E6B73")
        md_bg_color : get_color_from_hex("#FCE18E")
        font_size : 20
        user_font_size: "64sp"
        on_press:
            root.manager.transition.direction = 'left'
            root.switchExcluir()

    MDFillRoundFlatIconButton:
        text : 'Ver contas ativas'
        icon : "credit-card-clock-outline"
        pos_hint : {"center_x":.5,"center_y":.25}
        text_color : get_color_from_hex("#7E6B73")
        md_bg_color : get_color_from_hex("#FCE18E")
        font_size : 20
        user_font_size: "64sp"
        on_press:
            root.manager.transition.direction = 'left'
            root.switchAtivas()
   
    MDFillRoundFlatIconButton:
        text : 'Ver contas passadas'
        icon : "credit-card-refund"
        pos_hint : {"center_x":.5,"center_y":.15}
        text_color : get_color_from_hex("#7E6B73")
        md_bg_color : get_color_from_hex("#FCE18E")
        font_size : 20
        user_font_size: "64sp"
        on_press:
            root.manager.transition.direction = 'left'
            root.switchPassadas()