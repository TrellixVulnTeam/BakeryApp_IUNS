<FornecedoresPage>:
    name: 'fornecedores'
    MDToolbar:
        id: toolbar
        pos_hint: {"top": 1}
        elevation: 10
        title: "Bakery ABC - Fornecedores"
        md_bg_color: toolbarColor

    MDBottomNavigation:
        size_hint_y: .09
        panel_color: get_color_from_hex("#DF6710")
        text_color_active: get_color_from_hex("#fff4e6")
        first_widget: 'screen 3'
        
        MDBottomNavigationItem:
            name: 'screen 1'
            text: 'home'
            icon: 'home-circle'
            on_enter:
                root.manager.transition.direction = 'right'
                root.switchHome()

        MDBottomNavigationItem:
            name: 'screen 2'
            text: 'Estoque'
            icon: 'barcode'
            on_enter: root.switchEstoque()

        MDBottomNavigationItem:
            name: 'screen 3'
            text: 'Funcionários'
            icon: 'account-group'
            on_enter: root.switchFuncionario()

    MDFillRoundFlatIconButton:
        text : 'Cadastrar fornecedores'
        icon : "account-plus"
        pos_hint : {"center_x":.5,"center_y":.65}
        text_color : get_color_from_hex("#7E6B73")
        md_bg_color : get_color_from_hex("#FCE18E")
        font_size : 20
        user_font_size: "64sp"
        on_press:
            root.manager.transition.direction = 'left'
            root.switchCadastrar()

    MDFillRoundFlatIconButton:
        text : 'Consultar fornecedores cadastrados'
        icon : "account-search"
        pos_hint : {"center_x":.5,"center_y":.55}
        text_color : get_color_from_hex("#7E6B73")
        md_bg_color : get_color_from_hex("#FCE18E")
        font_size : 20
        user_font_size: "64sp"
        on_press:
            root.manager.transition.direction = 'left'
            root.switchConsultar()

    MDFillRoundFlatIconButton:
        text : 'Alterar dados de um fornecedor'
        icon : "account"
        pos_hint : {"center_x":.5,"center_y":.45}
        text_color : get_color_from_hex("#7E6B73")
        md_bg_color : get_color_from_hex("#FCE18E")
        font_size : 20
        user_font_size: "64sp"
        on_press:
            root.manager.transition.direction = 'left'
            root.switchAtualizar()


<CadastrarFornecedor>:
    name: 'cadastrar_fornecedor'

    MDToolbar:
        id: toolbar
        pos_hint: {"top": 1}
        elevation: 10
        title: "NOVO FORNECEDOR"
        md_bg_color: get_color_from_hex("#DF6710")

    MDBoxLayout:
        orientation: "vertical"
        pos_hint: {'center_x': .5, 'center_y': .70}

        MDTextField:
            id: cnpj
            multiline: False
            size_hint_x: .8
            hint_text: 'CNPJ:'
            pos_hint: {'center_x': .5}
            text_color: get_color_from_hex("#000000")

        MDTextField:
            id: nome
            multiline: False
            size_hint_x: .8
            hint_text: 'Nome do fornecedor:'
            pos_hint: {'center_x': .5}
            text_color: get_color_from_hex("#000000")

        MDTextField:
            id: rua
            multiline: False
            size_hint_x: .8
            hint_text: 'Rua:'
            pos_hint: {'center_x': .5}
            text_color: get_color_from_hex("#000000")

        MDTextField:
            id: estado
            multiline: False
            size_hint_x: .8
            hint_text: 'Estado:'
            pos_hint: {'center_x': .5}
            text_color: get_color_from_hex("#000000")

        MDTextField:
            id: cidade
            multiline: False
            size_hint_x: .8
            hint_text: 'Cidade: '
            pos_hint: {'center_x': .5}
            text_color: get_color_from_hex("#000000")

        MDTextField:
            id: cep
            multiline: False
            size_hint_x: .8
            hint_text: 'CEP:'
            pos_hint: {'center_x': .5}
            text_color: get_color_from_hex("#000000")

        MDTextField:
            id: numero
            multiline: False
            size_hint_x: .8
            hint_text: 'Número:'
            pos_hint: {'center_x': .5}
            text_color: get_color_from_hex("#000000")
        
        MDTextField:
            id: bairro
            multiline: False
            size_hint_x: .8
            hint_text: 'Bairro:'
            pos_hint: {'center_x': .5}
            text_color: get_color_from_hex("#000000")

                    
    ButtonFocus:
        size_hint_x: .35
        pos_hint: {'center_x': .3, 'center_y': .15}
        md_bg_color: app.theme_cls.primary_light
        focus_color: get_color_from_hex("#e54c37")
        unfocus_color: app.theme_cls.primary_light
        text: 'CADASTRAR'
        on_press: root.cadastrar()

    ButtonFocus:
        size_hint_x: .35
        pos_hint: {'center_x': .7, 'center_y': .15}
        md_bg_color: app.theme_cls.primary_light
        focus_color: get_color_from_hex("#e54c37")
        unfocus_color: app.theme_cls.primary_light
        text: 'CANCELAR'
        on_press:
            root.manager.transition.direction = 'right'
            root.switchFornecedores()


